{
  "swagger": "2.0",
  "info": {
    "title": "Coffee Shop API",
    "description": "C-Sharp tour in a Coffee Shop https://github.com/stacklog/c-sharp-language",
    "version": "4.0"
  },
  "schemes": [ "http" ],
  "basePath": "/api",
  "paths": {
    "/menu": {
      "get": {
        "summary": "Finds the menu items.",
        "produces": [ "application/json", "application/xml" ],
        "responses": {
          "200": {
            "description": "The list of menu items.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MenuItem"
              }
            }
          }
        }
      }
    },
    "/menu/{menuItemKey}/options": {
      "get": {
        "summary": "Find the options for a menu item.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "menuItemKey",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The list of menu item options.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OptionsTree"
              }
            }
          },
          "400": {
            "description": "The requested menu item does not exist."
          }
        }
      }
    }
  },
  "definitions": {
    "MenuItem": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "expresso"
        },
        "Value": {
          "type": "string",
          "example": "Expresso - Single Shot"
        },
        "Concept": {
          "type": "number",
          "example": 2.0
        }
      }
    },
    "OptionsTree": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "milk"
        },
        "Value": {
          "type": "string",
          "example": "Milk"
        },
        "Children": {
          "type": "array",
          "items": {
              "$ref": "#/definitions/OptionsLeaf"
            }
          }
      }
    },
    "OptionsLeaf": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "soy"
        },
        "Value": {
          "type": "string",
          "example": "Soy"
        }
      }
    }
  }
}
