{
  "swagger": "2.0",
  "info": {
    "title": "Coffee Shop API",
    "description": "C-Sharp tour in a Coffee Shop https://github.com/stacklog/c-sharp-language",
    "version": "4.0"
  },
  "schemes": [ "http" ],
  "basePath": "/api",
  "paths": {
    "/menu": {
      "get": {
        "summary": "Find the MenuItems.",
        "produces": [ "application/json", "application/xml" ],
        "responses": {
          "200": {
            "description": "The list of MenuItems.",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/MenuItem" }
            }
          }
        }
      }
    },
    "/menu/{menuItemKey}/options": {
      "get": {
        "summary": "Find the OptionTrees for a MenuItem.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "menuItemKey",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The list of OptionTrees for the specified MenuItem.",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/OptionsTree" }
            }
          },
          "404": {
            "description": "The specified MenuItem does not exist."
          }
        }
      }
    },
    "/cashier/pricing/{menuItemKey}": {
      "get": {
        "summary": "Get the PricingConcept for a customized MenuItem.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "menuItemKey",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "option",
            "in": "query",
            "type": "string",
            "description": "A pair of an OptionTree Key with an OptionLeaf Key"
          }
        ],
        "responses": {
          "200": {
            "description": "The custom PricingConcept for the MenuItem",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/PrincingConcept"
            }
          },
          "404": {
            "description": "The specified MenuItem does not exist."
          }
        }
      }
    },
    "/cashier/bill": {
      "post": {
        "summary": "Get a list of PrincingConcepts for a list of customized MenuItems.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "item",
            "in": "body",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/CustomMenuItem" }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The list of PricingConcepts",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PrincingConcept"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "MenuItemKey": {
      "type": "string",
      "example": "latte"
    },
    "MenuItemValue": {
      "type": "string",
      "example": "Latte - Classic Cup"
    },
    "OptionTreeKey": {
      "type": "string",
      "example": "milk"
    },
    "OptionTreeValue": {
      "type": "string",
      "example": "Milk"
    },
    "OptionLeafKey": {
      "type": "string",
      "example": "soy"
    },
    "OptionLeafValue": {
      "type": "string",
      "example": "Soy"
    },
    "MenuItem": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "$ref": "#/definitions/MenuItemKey"
        },
        "Value": {
          "type": "string",
          "$ref": "#/definitions/MenuItemValue"
        },
        "Concept": {
          "type": "number",
          "example": 2.0
        }
      }
    },
    "OptionsTree": {
      "type": "object",
      "properties": {
        "Key": { "$ref": "#/definitions/OptionTreeKey" },
        "Value": { "$ref": "#/definitions/OptionTreeValue" },
        "Children": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Key": { "$ref": "#/definitions/OptionLeafKey" },
              "Value": { "$ref": "#/definitions/OptionLeafValue" }
            }
          }
        }
      }
    },
    "CustomMenuItem": {
      "type": "object",
      "properties": {
        "Key": {
          "type": "string",
          "$ref": "#/definitions/MenuItemKey"
        },
        "Children": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Key": { "$ref": "#/definitions/OptionTreeKey" },
              "Value": { "$ref": "#/definitions/OptionLeafKey" }
            }
          }
        }
      }
    },
    "PrincingConcept": {
      "type": "object",
      "required": [ "Value", "Concept" ],
      "properties": {
        "Value": {
          "type": "string",
          "example": "Americano - Double Sized"
        },
        "Concept": {
          "type": "number",
          "example": 2.0
        }
      }
    }
  }
}
