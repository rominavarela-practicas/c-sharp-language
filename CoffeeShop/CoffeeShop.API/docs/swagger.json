{
  "swagger": "2.0",
  "info": {
    "title": "Coffee Shop API",
    "description": "C-Sharp tour in a Coffee Shop https://github.com/stacklog/c-sharp-language",
    "version": "4.0"
  },
  "schemes": [ "http" ],
  "basePath": "/api",
  "paths": {
    "/menu": {
      "get": {
        "summary": "Find the MenuItems.",
        "produces": [ "application/json", "application/xml" ],
        "responses": {
          "200": {
            "description": "The list of MenuItems.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/MenuItem"
              }
            }
          }
        }
      }
    },
    "/menu/{menuItemKey}/options": {
      "get": {
        "summary": "Find the OptionTrees for a MenuItem.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "menuItemKey",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The list of OptionTrees for the specified MenuItem.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OptionsTree"
              }
            }
          },
          "404": {
            "description": "The specified MenuItem does not exist."
          }
        }
      }
    },
    "/cashier/pricing/{menuItemKey}": {
      "get": {
        "summary": "Get the PricingConcept for a MenuItem.",
        "produces": [ "application/json", "application/xml" ],
        "parameters": [
          {
            "name": "menuItemKey",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "option",
            "in": "query",
            "type": "string",
            "description": "A pair of an OptionTree Key with an OptionLeaf Key"
          }
        ],
        "responses": {
          "200": {
            "description": "The custom PricingConcept for the MenuItem",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/PrincingConcept"
            }
          },
          "404": {
            "description": "The specified MenuItem does not exist."
          }
        }
      }
    }
  },
  "definitions": {
    "MenuItem": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "expresso"
        },
        "Value": {
          "type": "string",
          "example": "Expresso - Single Shot"
        },
        "Concept": {
          "type": "number",
          "example": 2.0
        }
      }
    },
    "OptionsTree": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "milk"
        },
        "Value": {
          "type": "string",
          "example": "Milk"
        },
        "Children": {
          "type": "array",
          "items": {
              "$ref": "#/definitions/OptionsLeaf"
            }
          }
      }
    },
    "OptionsLeaf": {
      "type": "object",
      "required": [ "Key" ],
      "properties": {
        "Key": {
          "type": "string",
          "example": "soy"
        },
        "Value": {
          "type": "string",
          "example": "Soy"
        }
      }
    },
    "PrincingConcept": {
      "type": "object",
      "required": [ "Value", "Concept" ],
      "properties": {
        "Value": {
          "type": "string",
          "example": "Americano - Double Sized"
        },
        "Concept": {
          "type": "number",
          "example": 2.0
        }
      }
    }
  }
}
